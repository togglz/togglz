<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>togglz-project</artifactId>
    <groupId>org.togglz</groupId>
    <version>2.9.1-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>togglz-console</artifactId>
  <name>Togglz - Admin Console</name>
  <description>Togglz - Admin Console</description>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.2.4</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <includes>
                  <include>com.floreysoft:jmte</include>
                  <include>asm:asm</include>
                </includes>
              </artifactSet>
              <relocations>
                <relocation>
                  <pattern>com.floreysoft.jmte</pattern>
                  <shadedPattern>org.togglz.console.shade.jmte</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>org.objectweb.asm</pattern>
                  <shadedPattern>org.togglz.console.shade.asm</shadedPattern>
                </relocation>
              </relocations>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.owasp.encoder</groupId>
      <artifactId>encoder</artifactId>
      <version>1.2.2</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.togglz</groupId>
      <artifactId>togglz-servlet</artifactId>
      <version>2.9.1-SNAPSHOT</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>javax.servlet-api</artifactId>
      <version>4.0.1</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.wildfly.arquillian</groupId>
      <artifactId>wildfly-arquillian-container-managed</artifactId>
      <version>2.2.0.Final</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>wildfly-arquillian-common</artifactId>
          <groupId>org.wildfly.arquillian</groupId>
        </exclusion>
        <exclusion>
          <artifactId>wildfly-arquillian-protocol-jmx</artifactId>
          <groupId>org.wildfly.arquillian</groupId>
        </exclusion>
        <exclusion>
          <artifactId>xnio-api</artifactId>
          <groupId>org.jboss.xnio</groupId>
        </exclusion>
        <exclusion>
          <artifactId>xnio-nio</artifactId>
          <groupId>org.jboss.xnio</groupId>
        </exclusion>
        <exclusion>
          <artifactId>jboss-logging</artifactId>
          <groupId>org.jboss.logging</groupId>
        </exclusion>
        <exclusion>
          <artifactId>jboss-marshalling</artifactId>
          <groupId>org.jboss.marshalling</groupId>
        </exclusion>
        <exclusion>
          <artifactId>jboss-marshalling-river</artifactId>
          <groupId>org.jboss.marshalling</groupId>
        </exclusion>
        <exclusion>
          <artifactId>jboss-remoting</artifactId>
          <groupId>org.jboss.remoting</groupId>
        </exclusion>
        <exclusion>
          <artifactId>remoting-jmx</artifactId>
          <groupId>org.jboss.remotingjmx</groupId>
        </exclusion>
        <exclusion>
          <artifactId>javax.inject</artifactId>
          <groupId>javax.inject</groupId>
        </exclusion>
        <exclusion>
          <artifactId>wildfly-launcher</artifactId>
          <groupId>org.wildfly.core</groupId>
        </exclusion>
        <exclusion>
          <artifactId>arquillian-core-api</artifactId>
          <groupId>org.jboss.arquillian.core</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
</project>
