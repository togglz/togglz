            </dependency>

            <dependency>
                <groupId>org.togglz</groupId>
                <artifactId>togglz-redis</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>org.togglz</groupId>
                <artifactId>togglz-benchmarks</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>org.togglz</groupId>
                <artifactId>togglz-console</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>org.togglz</groupId>
