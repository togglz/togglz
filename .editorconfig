# configuration file for EditorConfig: http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
ij_continuation_indent_size = 8
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 160

[*.{yml, js,ts,tsx,scss,json}]
indent_size = 2
ij_continuation_indent_size = 2
